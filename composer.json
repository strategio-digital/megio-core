{
    "name": "strategio/megio-core",
    "description": "Most powerful tool for creating webs, apps & APIs.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Megio\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "app/",
            "App\\Migrations\\": "migrations/",
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Jiří Zapletal",
            "email": "jz@strategio.dev",
            "homepage": "https://jz.strategio.dev"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.4",
        "ext-json": "*",
        "ext-openssl": "*",
        "aws/aws-sdk-php": "^3.357",
        "doctrine/dbal": "^4.3",
        "doctrine/migrations": "^3.9",
        "doctrine/orm": "^3.5",
        "latte/latte": "^3.0",
        "lcobucci/jwt": "^5.6",
        "nette/di": "^3.2",
        "nette/mail": "^4.0",
        "nette/schema": "^1.3",
        "nette/security": "^3.2",
        "nette/utils": "^4.0",
        "sentry/sentry": "^4.17",
        "siketyan/yarn-lock": "^1.1",
        "symfony/cache": "^7.3",
        "symfony/config": "^7.3",
        "symfony/console": "^7.3",
        "symfony/dotenv": "^7.3",
        "symfony/event-dispatcher": "^7.3",
        "symfony/http-foundation": "^7.3",
        "symfony/http-kernel": "^7.3",
        "symfony/routing": "^7.3",
        "symfony/uid": "^7.3",
        "tracy/tracy": "^2.10",
        "symfony/serializer": "^7.3",
        "symfony/validator": "^7.3",
        "symfony/property-access": "^7.3",
        "symfony/translation": "^7.3"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24",
        "phpunit/phpunit": "^12.4",
        "friendsofphp/php-cs-fixer": "^3.89",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "phpstan:baseline": "php -d memory_limit=-1 vendor/bin/phpstan analyse -c phpstan.neon -vv -b phpstan-baseline.neon --allow-empty-baseline",
        "phpstan": "php -d memory_limit=-1 vendor/bin/phpstan analyse -c phpstan.neon",
        "neon": "vendor/bin/neon-lint config/",
        "latte": "vendor/bin/latte-lint view/",
        "schema": "bin/console orm:validate-schema",
        "test": "vendor/bin/phpunit --display-notices",
        "test:unit": "vendor/bin/phpunit --display-notices tests/Unit",
        "test:feature": "vendor/bin/phpunit --display-notices tests/Feature",
        "test:coverage": "vendor/bin/phpunit --display-notices --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php",
        "format:check": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --dry-run --diff",
        "analyse": [
            "@phpstan",
            "@format:check",
            "@neon",
            "@latte",
            "@schema",
            "@test"
        ]
    }
}
